<Window x:Class="AI_Board.MiniWidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MiniWidget" Height="30" Width="140"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True"
        Loaded="Window_Loaded" Closing="Window_Closing" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="Manual" >

    <!-- 整个区域可点击 -->
    <Border x:Name="MainBorder" Background="#01FFFFFF" CornerRadius="25" Cursor="Hand">
        <!-- #01FFFFFF 是为了保持点击响应，完全 Transparent 有时会穿透 -->

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- 图标 (请确保图片路径正确，或使用 PackIcon 替代) -->
            <Image x:Name="IconImage" Width="24" Height="24" Margin="0,0,8,0" Source="board_icon.png">
                <!-- 如果没有 png，可以用下面的 Icon 临时代替 -->
                <!-- <materialDesign:PackIcon Kind="GoogleClassroom" Width="24" Height="24"/> -->
            </Image>

            <TextBlock x:Name="TxtTitle" Text="显示小黑板" FontSize="14" FontWeight="Bold" 
                       VerticalAlignment="Center" Foreground="White">
                <TextBlock.Effect>
                    <!-- 加一点阴影，保证在复杂背景下也能看清 -->
                    <DropShadowEffect BlurRadius="2" ShadowDepth="1" Opacity="0.5" Color="Black"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
    </Border>
</Window>
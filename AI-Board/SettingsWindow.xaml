<Window x:Class="AI_Board.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="软件设置" Height="700" Width="480"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1E1E1E" Foreground="White"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular" TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignDefaultFont}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题 -->
        <TextBlock Text="⚙️ 小黑板软件设置" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- 动态生成的设置项容器 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="DynamicSettingsContainer" Margin="0,0,10,0"/>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Button Content="保存并应用配置" Height="40" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Click="BtnSave_Click"/>
        </Grid>
    </Grid>
</Window>